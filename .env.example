# Shared Environment Variables for StudyDash
# This file contains environment variables for both frontend and backend

# Database Configuration (MariaDB)
# For containers, use service name as host
DB_HOST=localhost
DB_PORT=3306
DB_NAME=studydash
DB_USER=studydash_user
DB_PASSWORD=studydash_password

# MariaDB specific environment variables
MYSQL_ROOT_PASSWORD=root_password_here
MYSQL_DATABASE=studydash
MYSQL_USER=studydash_user
MYSQL_PASSWORD=studydash_password

# Backend API Configuration
PORT=3030
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
VITE_API_BASE_URL=http://localhost:3030

# Frontend Configuration (Vite variables must start with VITE_)
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_PORT=3000

# Development
DEBUG=true
VITE_DEBUG=true